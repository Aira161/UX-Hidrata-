<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAlarma">
    <!-- Header/StatusBar Space -->
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar_space">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/flecha"
            app:tint="#62CDFA" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Crear alarma"
            android:textColor="#303030"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="24dp">

            <!-- Alarm Name Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Nombre de la alarma"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarm_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@color/input"
                android:fontFamily="sans-serif"
                android:hint="Mañana"
                android:paddingHorizontal="16dp"
                android:textColor="#303030"
                android:textColorHint="#8E8E8E"
                android:textSize="14sp" />

            <!-- Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Estado"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@color/GrisCrear"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_on"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/toggle_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="On"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_off"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/toggle_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Off"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- From Time Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Desde"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_from_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/GrisCrear"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="09:41"
                    android:textColor="#303030"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/GrisCrear"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_from_am"
                        android:layout_width="40dp"
                        android:layout_height="32dp"
                        android:background="@drawable/toggle_selected"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="AM"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/btn_from_pm"
                        android:layout_width="40dp"
                        android:layout_height="32dp"
                        android:background="@drawable/toggle_unselected"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="PM"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Until Time Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Hasta"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_until_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/GrisCrear"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="10:41"
                    android:textColor="#303030"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/GrisCrear"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_until_am"
                        android:layout_width="40dp"
                        android:layout_height="32dp"
                        android:background="@drawable/toggle_selected"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="AM"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/btn_until_pm"
                        android:layout_width="40dp"
                        android:layout_height="32dp"
                        android:background="@drawable/toggle_unselected"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="PM"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Intervals Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Intervalos"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_interval_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/GrisCrear"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="00:41"
                    android:textColor="#303030"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/input"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Minutos"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Pre-recorded Message Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="¿Usar mensaje pregrabado?"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:background="@color/input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tv_message_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Mensaje de Ana"
                    android:textColor="#8E8E8E"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/dropdown"
                    />

                <ImageView
                    android:id="@+id/btn_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/mas"
                     />

            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/primary_blue"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>